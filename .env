### App Configuration ###
APP_NAME=TutorConnect
SERVER_PORT=8080

### Database Configuration ###
DB_HOST=localhost
DB_PORT=3306
DB_NAME=tutor_connect
DB_USERNAME=root
DB_PASSWORD=
DB_URL=jdbc:mysql://localhost:3306/tutor_connect?createDatabaseIfNotExist=true
DB_DRIVER=com.mysql.cj.jdbc.Driver

### JPA & Hibernate ###
JPA_DDL_AUTO=update
HIBERNATE_DIALECT=org.hibernate.dialect.MySQL8Dialect
SHOW_SQL=true

### JWT Configuration ###
JWT_SECRET=MySuperSecretKeyWithAtLeast32CharactersLong12345678901234567890
JWT_EXPIRATION=86400000

### Logging ###
LOG_LEVEL_SPRING_WEB=DEBUG
LOG_LEVEL_MA_TUTORCONNECT=TRACE

### File Upload Directory ###
FILE_UPLOAD_DIR=uploads

### Bean Override (Optional) ###
ALLOW_BEAN_DEFINITION_OVERRIDING=true

### Frontend Configuration ###
FRONTEND_URL=http://localhost:3000
