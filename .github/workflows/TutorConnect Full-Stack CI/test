name: TutorConnect Minimal Build

on:
  push:
    branches: [ main, dev_maaroufi, dev_marouane, dev_zouhair ]
  pull_request:
    branches: [ main ]

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout code
        uses: actions/checkout@v3
      
      # Setup Java
      - name: Set up JDK 17
        uses: actions/setup-java@v3
        with:
          java-version: '17'
          distribution: 'temurin'
      
      # Verify Java installation only
      - name: Verify Java
        run: java -version
      
      # Compile without tests or packaging
      - name: Compile Java
        run: mvn clean compile -DskipTests
      
      # Verify success
      - name: Verify build success
        run: echo "Build completed successfully"
